<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginBottom="5dp"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:id="@+id/news_list_item_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/news_list_item_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:scaleType="centerCrop"
            android:contentDescription="@string/description_featured_image" />

        <TextView
            android:id="@+id/news_list_item_title"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/news_list_item_image"
            android:layout_toRightOf="@id/news_list_item_image"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textSize="18sp"
            android:textColor="#444"
            android:maxLines="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/news_list_item_subtitle"
            android:layout_below="@id/news_list_item_title"
            android:layout_toEndOf="@id/news_list_item_image"
            android:layout_toRightOf="@id/news_list_item_image"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textSize="12sp"
            android:textColor="#777"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
